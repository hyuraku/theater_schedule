.modal.fade#theater-modal{ "aria-hidden": true, "aria-labelledby": "theater-modal-label" }
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title#theater-modal-label Theater list
        %button.close{ "aria-label": "Close", "data-dismiss": "modal", type: "button" }
          %span{ "aria-hidden": true } Ã—
      .modal-body
        - @theaters.each do |theater|
          %tr
            %td= simple_format(theater.name)

      .modal-footer
        %button.btn.btn-secondary{ "data-dismiss": "modal", type: "button" } Close
        %button.btn.btn-primary{ type: "button" } Search
